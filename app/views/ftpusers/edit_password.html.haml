%h2.page_title 
  Change a FTP User password
  %ul
    %li= link_to "Back the FTP User", ftpuser_path(current_object)
    %li= link_to "Back to the FTP Users list", ftpusers_path
    %li= link_to "Back to the homepage", home_path

.form_holder
  =# error_messages_for :ftpuser

  - form_for(current_object, :url => update_password_ftpuser_url(current_object)) do |f|
    =f.error_messages
    %p
      %span.label= f.label :password, f.object.new_record? ? nil : "New password"
      %span.input= f.password_field :password, :class => "password_field", :value => ''
    %p
      %span.label= f.label :password_confirmation
      %span.input= f.password_field :password_confirmation, :class => "password_field"
        
    %p.submit
      = submit_tag("Change password")
      = link_to("Cancel", :back, :class => "alternative_button")
        